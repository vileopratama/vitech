<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_lounge_order_non_cash_report_tree">
            <field name="name">Non-Cash Orders</field>
            <field name="model">report.lounge.order.non.cash</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="partner_id" />
                    <field name="company_type" />
                    <field name="lounge_reference" />
                    <field name="booking_from_date" />
                    <field name="booking_to_date" />
                    <field name="flight_number" />
                    <field name="service_01" />
                    <field name="service_02" />
                    <field name="service_03" />
                    <field name="flight_type" />
                    <field name="grandtotal" />
                    <field name="total_pax" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_lounge_order_non_cash_report_search">
            <field name="name">report.lounge.order.non.cash.search</field>
            <field name="model">report.lounge.order.non.cash</field>
            <field name="arch" type="xml">
                <search string="Non-Cash Orders">
                    <field name="partner_id"/>
                    <field name="lounge_reference"/>
                    <field name="flight_number"/>
                    <field name="service_01"/>
                    <field name="service_02"/>
                    <field name="service_03"/>

                    <filter string="Individual" domain="[('company_type', '=', 'Individual')]" />
                    <filter string="Company" domain="[('company_type', '=', 'Company')]" />
                    <filter string="Current Month" name='current_month' domain="[('booking_from_date','&gt;=',(context_today()-relativedelta(months=1)).strftime('%%Y-%%m-01')),('booking_from_date','&lt;',time.strftime('%%Y-%%m-31'))]"/>

                </search>
            </field>
        </record>

        <record id="action_report_lounge_order_non_cash" model="ir.actions.act_window">
            <field name="name">Cash Orders</field>
            <field name="res_model">report.lounge.order.non.cash</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="context">{"search_default_current_month":1}</field>
            <field name="search_view_id" ref="view_lounge_order_non_cash_report_search" />
        </record>

        <menuitem name="Non-Cash Orders"
                  action="action_report_lounge_order_non_cash"
                  id="menu_report_lounge_order_non_cash"
                  parent="menu_lounge_report"
                  sequence="9"/>
    </data>
</odoo>